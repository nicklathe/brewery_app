<% include header %>

<div id="list-outer" class="col-md-6 col-sm-6 col-md-offset-3 col-md-offset-4">

    <div class="text-center">
        <h1 id="fav-list-h1"><%= user.name %>'s Favorite Breweries</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Brewery</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < returnedList.length; i++) { %>
            <tr>
                <td><a class="fav-list" href="/brewery/<%= returnedList[i].brewery_id%>"><%= returnedList[i].brewery_name %></a></td>
                <td><button data-id="<%= returnedList[i].brewery_id %>" type="submit" class="btn btn-primary btn-sm btn-danger deleteBrewery">Delete</button></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

<% include footer %>